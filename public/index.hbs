            <h1>Generate Batch Code</h1>
            <form action="/batchcode" method="POST">
                <b>Center</b>
                <select name="center">
                    {{#each centers as |c|}}
                        <option value="{{c.id}}">{{c.name}}</option>
                    {{/each}}
                </select>
                <br>
                 <b>Season</b>
                <select name="season">
                    {{#each seasons as |s|}}
                        <option value="{{s.id}}">{{s.name}}</option>
                    {{/each}}
                </select>
                <br>
                 <b>Course</b>
                <select name="course">
                    {{#each courses as |c|}}
                        <option value="{{c.id}}">{{c.name}}</option>
                    {{/each}}
                </select>
                <br>
                <b>Year</b>
                <select name="year">
                    {{#each years as |y|}}
                    <option>{{y}}</option>
                    {{/each}}
                </select>
                <br><br>
                <b>Batch No.</b>
                <input name="batchno" type="number" min="1" max = "5">
                <b>Start</b>
                <input type="date" name="start">
                <b>End</b>
                <input type="date" name="end">
                <button type="submit">Submit</button>
            </form>
        <script src="" async defer></script>
    </body>
